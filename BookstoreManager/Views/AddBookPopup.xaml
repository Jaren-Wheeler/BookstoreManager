<Window x:Class="BookstoreManager.Views.AddBookPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookstoreManager.Views"
        mc:Ignorable="d"
        Title="AddBookPopup" Height="300" Width="400">

    <Border CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <!-- Title bar -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Custom title bar -->
            <Grid Background="#2D2D30">
                <TextBlock Text="Add New Book" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           Margin="10,0,0,0"
                           FontWeight="Bold"/>

                <!-- Close button -->
                <Button x:Name="CloseButton" 
                        Content="✕" 
                        Width="30" Height="30"
                        Background="Transparent" 
                        Foreground="White"
                        FontSize="14"
                        BorderBrush="{x:Null}"
                        Cursor="Hand"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        Click="Close_Click"
                        ToolTip="Close"/>
            </Grid>

            <!-- Content area -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Book Title -->
                <TextBlock Text="Book Title:" 
                           Grid.Row="0" Grid.Column="0" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox x:Name="TitleTextBox" 
                         Grid.Row="0" Grid.Column="1" 
                         Margin="0,0,0,10"
                         Height="25" />

                <!-- Author -->
                <TextBlock Text="Author:" 
                           Grid.Row="1" Grid.Column="0" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox x:Name="AuthorTextBox" 
                         Grid.Row="1" Grid.Column="1" 
                         Margin="0,0,0,10"
                         Height="25" />

                <!-- Submit Button -->
                <Button x:Name="SubmitButton" 
                        Grid.Row="2" Grid.ColumnSpan="2"
                        Content="Add Book"
                        Height="30"
                        Width="100"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        Click="SubmitButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
