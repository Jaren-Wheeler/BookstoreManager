<Window x:Class="BookstoreManager.Views.CreateAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookstoreManager"
        mc:Ignorable="d"
        Title="CreateAccount" Height="600" Width="900">
    <Grid Background="#F5F5F5">
        <Border Background="White" 
            CornerRadius="10" 
            Padding="30" 
            Width="375" 
            Height="500">

            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="Create Account" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20" 
                       Foreground="#333333"/>

                <TextBlock x:Name="lblMessages"
                     ></TextBlock>
                
                <!-- Create Username Field -->
                <TextBlock Text="Create Username" Margin="0,5,0,2" Foreground="#666666"/>
                <TextBox x:Name="txtCreateUsername" 
                     Height="30" 
                     Padding="5" 
                     BorderBrush="#CCCCCC" 
                     BorderThickness="1"
                     Margin="0,0,0,10"/>

                <!-- Create Password Field -->
                <TextBlock Text="Create Password" Margin="0,5,0,2" Foreground="#666666"/>
                <PasswordBox x:Name="pwdCreatePassword" 
                         Height="30" 
                         Padding="5" 
                         BorderBrush="#CCCCCC" 
                         BorderThickness="1"
                         Margin="0,0,0,20"/>

                <!-- Confirm Password Field -->
                <TextBlock Text="Confirm Password" Margin="0,5,0,2" Foreground="#666666"/>
                <PasswordBox x:Name="pwdConfirmPassword" 
                        Height="30" 
                        Padding="5" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="1"
                        Margin="0,0,0,20"/>

                <!-- Confirm Button -->
                <Button x:Name="btnConfirm" 
                    Content="Confirm" 
                    Height="35" 
              
                    Margin="0,0,0,10" Click="btnConfirm_Click"/>

                <!-- Cancel Button -->
                <Button x:Name="btnCancel" 
                    Content="Cancel" 
                    Height="35" Click="btnCancel_Click" 
                   />

            </StackPanel>
        </Border>

        <!-- Define Styles and Resources -->
        <Grid.Resources>
            <!-- Standard Drop Shadow Effect -->
            <DropShadowEffect x:Key="DropShadowEffect" 
                          Color="#AAAAAA" 
                          Direction="270" 
                          ShadowDepth="3" 
                          BlurRadius="5" 
                          Opacity="0.4"/>

            <!-- Primary Button Style (Blue) -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#007ACC"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#005A9C"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Secondary Button Style (Gray/White) -->
            <Style x:Key="SecondaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#007ACC"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="BorderBrush" Value="#007ACC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#E6F2FF"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

        </Grid.Resources>
    </Grid>

</Window>

