<Window x:Class="BookstoreManager.Views.EditCustomerPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="EditCustomerPopup"
        d:DesignHeight="350" d:DesignWidth="450">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- First Name -->
            <RowDefinition Height="Auto"/>
            <!-- Last Name -->
            <RowDefinition Height="Auto"/>
            <!-- Email -->
            <RowDefinition Height="Auto"/>
            <!-- Phone -->
            <RowDefinition Height="Auto"/>
            <!-- Points -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Window Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Edit Customer Details"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- First Name -->
        <TextBlock Text="First Name:" Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Name="firstNameTextBox" Grid.Row="1" Grid.Column="1"
                 Margin="0,0,0,10"/>

        <!-- Last Name -->
        <TextBlock Text="Last Name:" Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Name="lastNameTextBox" Grid.Row="2" Grid.Column="1"
                 Margin="0,0,0,10"/>

        <!-- Email -->
        <TextBlock Text="Email:" Grid.Row="3" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Name="emailTextBox" Grid.Row="3" Grid.Column="1"
                 Margin="0,0,0,10"/>

        <!-- Phone Number -->
        <TextBlock Text="Phone Number:" Grid.Row="4" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Name="phoneTextBox" Grid.Row="4" Grid.Column="1"
                 Margin="0,0,0,10"/>

        <!-- Points -->
        <TextBlock Text="Points:" Grid.Row="5" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Name="pointsTextBox" Grid.Row="5" Grid.Column="1"
                 Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Back" Width="80" Margin="0,0,10,0"
                    Click="btnBack_Click"/>

            <Button Content="Delete" Width="80" Margin="0,0,10,0"
                    Background="Red" Foreground="White"
                    Click="btnDelete_Click"/>

            <Button Content="Submit" Width="80"
                    Background="Green" Foreground="White"
                    Click="btnSubmit_Click"/>

        </StackPanel>
    </Grid>
</Window>
