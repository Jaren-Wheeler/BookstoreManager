<Window x:Class="BookstoreManager.Views.MainDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookstoreManager.Views"
        mc:Ignorable="d"
        Title="MainDashboard" Height="450" Width="800">
    <Grid>
        <!-- Define two columns: Navigation + Main content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Navigation bar width -->
            <ColumnDefinition Width="*"/>
            <!-- Main content fills rest -->
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <StackPanel Grid.Column="0" Background="#2D2D30">
            <TextBlock Text="Bookstore Manager" Foreground="White" FontSize="20" FontWeight="Bold" 
                       Margin="20,30,0,30"/>

            <!-- Navigation Buttons -->
            <Button x:Name="dashboardNavBtn" Content="Dashboard" Height="50" Margin="10" Foreground="White" Background="#007ACC" Click="dashboardNavBtn_Click"/>
            <Button x:Name="bookNavBtn" Content="Books" Height="50" Margin="10" Foreground="White" Background="#007ACC" Click="Button_Click"/>
            <Button x:Name="customerNavBtn" Content="Customers" Height="50" Margin="10" Foreground="White" Background="#007ACC" Click="customerNavBtn_Click"/>
            <Button x:Name="salesNavBtn" Content="Sales" Height="50" Margin="10" Foreground="White" Background="#007ACC" Click="salesNavBtn_Click"/>
            <Button x:Name="logoutBtn" Content="Log Out" Height="50" Margin="10" Foreground="White" Background="#007ACC" Click="logoutBtn_Click"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="10">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="0,10,0,20"/>

                <!-- Quick Info Cards -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,20">
                    <Border Background="#007ACC" CornerRadius="10" Width="180" Height="100" Margin="10">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Books" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="120" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#28A745" CornerRadius="10" Width="180" Height="100" Margin="10">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Customers" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="50" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FFC107" CornerRadius="10" Width="180" Height="100" Margin="10">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Sales" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="75" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Placeholder for dynamic content -->
                <Border Background="White" CornerRadius="10" Padding="20" Height="350">
                    <TextBlock Text="Content area: display reports, lists, etc." Foreground="#555" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
